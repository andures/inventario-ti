# MongoDB
MONGO_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/<database>?retryWrites=true&w=majority

# Server
PORT=3000
NODE_ENV=development

# JWT — generate secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=Inventario TI <noreply@example.com>

# Seed admin — used by `npm run seed` to create the initial admin user
ADMIN_NOMBRE=
ADMIN_EMAIL=
ADMIN_PASSWORD=
